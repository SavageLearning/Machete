@model Machete.Web.ViewModel.HirerLoginViewModel

@{
    ViewBag.Title = @Machete.Web.Resources.ValidationStrings.LogOnTitle;
}
<div class="account-background">
    <h2>@ViewBag.def.getConfig("LogOnTitle_EN")</h2>
    <p>
        @Machete.Web.Resources.ValidationStrings.HirerLogOnRegisterString1 @Html.ActionLink(@Machete.Web.Resources.ValidationStrings.HirerCreateAccount, "Register") @Machete.Web.Resources.ValidationStrings.HirerLogOnRegisterString2
    </p>
    @Html.Raw(ViewBag.def.getConfig("WorkCenterDescription_EN")) 

    @Html.ValidationSummary(true, @Machete.Web.Resources.ValidationStrings.LogOnUnsuccessful)

    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <fieldset>
                        <legend>@Machete.Web.Resources.ValidationStrings.AccountInfoLegend</legend>
                        <div class="tb-table">
                            <div class="tb-row">
                                <div class="tb-label">
                                    @Html.LabelFor(m => m.UserName)
                                </div>
                                <div class="tb-field">
                                    @Html.TextBoxFor(m => m.UserName)
                                    @Html.ValidationMessageFor(m => m.UserName)
                                </div>
                            </div>
                            <div class="tb-row">
                                <div class="tb-label">
                                    @Html.LabelFor(m => m.Password)
                                </div>
                                <div class="tb-field">
                                    @Html.PasswordFor(m => m.Password)
                                    @Html.ValidationMessageFor(m => m.Password)
                                </div>
                            </div>
                            <div class="tb-row">
                                <input type="submit" value="@Machete.Web.Resources.ValidationStrings.LogOn" />
                            </div>
                        </div>
                    </fieldset>
                }
            </section>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
    });

        function logon() {
            $("form:first").submit();
        }
</script>