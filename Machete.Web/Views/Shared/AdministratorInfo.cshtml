@model Machete.Domain.Record
@using Machete.Web.Helpers
@using Machete.Web.Resources
@if (Html.IsInRole(Html.Role_A()))
{
<div id="adminAccordion" class="Accordion print_off view_off">
    <h3><a href="#">@Shared.administratorinformation</a></h3> 
    <div class="tb-table">
        <div class="tb-row">
            <div class="tb-label">
                @Html.LabelFor(model => model.ID)
            </div>
            <div class="tb-field">
                @Html.DisplayFor(model => model.ID, new { @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.ID)
            </div>
        </div>
    </div>
</div>  
}
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        $(".Accordion").accordion({
            collapsible: true,
            active: false,
            autoHeight: false
        });
    });
</script>