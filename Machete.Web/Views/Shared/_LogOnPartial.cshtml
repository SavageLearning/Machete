@using Microsoft.AspNet.Identity
@using Machete.Web.Helpers
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <text>@Machete.Web.Resources.ValidationStrings.Welcome <b>@User.Identity.GetUserName()</b>
        [ @if(Html.IsInRole(Html.Role_AM())) { @Html.ActionLink(@Machete.Web.Resources.ValidationStrings.Settings, "Index", "Account") }
        else { @Html.ActionLink("Manage", "Manage", "Account") } ]
        [ @Html.ActionLink(@Machete.Web.Resources.ValidationStrings.LogOff, "LogOff", "Account") ]
        </text>
    }

    using (Html.BeginForm("LogOff", "HirerAccount", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <text>@Machete.Web.Resources.ValidationStrings.Welcome <b>@User.Identity.GetUserName()</b>
        [ @Html.ActionLink("Manage", "Manage", "HirerAccount") ]
        [ @Html.ActionLink(@Machete.Web.Resources.ValidationStrings.LogOff, "LogOff", "HirerAccount") ]
        </text>
    }
}
else
{
    @:[ @Html.ActionLink(@Machete.Web.Resources.ValidationStrings.LogOn, "Login", "Account") ]
    @:[ @Html.ActionLink(@Machete.Web.Resources.ValidationStrings.signup, "Register", "HirerAccount") ]
    @:[ @Html.ActionLink(@Machete.Web.Resources.ValidationStrings.hirersignin, "Login", "HirerAccount") ]
}